{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "types": ["node"],
    "esModuleInterop": true,
    "target": "esnext",
    "module": "NodeNext",
    "noEmit": true,
    "allowImportingTsExtensions": true
  }
}
